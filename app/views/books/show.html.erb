<div id="books-show">
  <h2><%= @book.title %></h2>
  <div class="books-show-left">
    <%= image_tag(@book.coverpath) %>
  </div>
  <div class="books-show-right">
    <h3>Información:</h3>
    <ul>
      <li><strong>Categoria: </strong><%= @book.category.name %></li>
      <li><strong>Autor: </strong><%= @book.author.first_name %>
      <%= @book.author.last_name %></li>
      <li><strong>Editorial: </strong><%= @book.publisher.name %></li>
      <li><strong>Año: </strong><%= @book.year %></li>
      <li><strong>ISBN: </strong><%= @book.isbn %></li>
      <li><strong>Formato: </strong><%= @book.format %></li>
      <li><strong>Páginas: </strong><%= @book.pages %></li>
    </ul>
    <%= link_to "Compralo por " + @book.price, @book.buy, class:'btn btn-success', target:'_blank' %>
  </div>
  <div class="clearfix"></div>
  <h4>Extracto</h4>
  <p><%= @book.excerpt %></p>
  <h3>Administrar</h3>
  <%= link_to 'Editar', edit_book_path(@book.id) %> | <%= link_to 'Eliminar', book_path(@book),
  method: :delete, data: { confirm: 'Estas seguro?' } %>
</div>
