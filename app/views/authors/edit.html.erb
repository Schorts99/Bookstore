<h2>Editar autor</h2>

<%= form_for @author do |f| %>
  <% if @author.errors.any? %>
    <% @author.errors.full_messages.each do |msg| %>
      <div class="alert alert-danger">
        <%= msg %>
      </div>
    <% end %>
  <% end %>
  <div class="form-group">
    <%= f.label :first_name, "Nombre" %><br/>
    <%= f.text_field :first_name, class:'form-control' %><br/>
  </div>

  <div class="form-group">
    <%= f.label :last_name, "Apellido" %><br/>
    <%= f.text_field :last_name, class:'form-control' %><br/>
  </div>

  <%= f.submit 'Aceptar', class:'btn btn-primary' %>
  <%= link_to 'Cancelar', authors_path, class:'btn btn-default' %>
<% end %>
